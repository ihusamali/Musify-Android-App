                        android:paddingLeft="20dp"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:text="Artist 2"
                        android:layout_marginLeft="40dp"
                        android:textColor="#FFE333"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:paddingLeft="20dp"/>

